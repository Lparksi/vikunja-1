# Vikunja Python Backend Configuration
# Copy this file to .env and modify as needed

# Service Configuration
VIKUNJA_SERVICE_INTERFACE=:3456
VIKUNJA_SERVICE_PUBLICURL=http://localhost:3456
VIKUNJA_SERVICE_ROOTPATH=.
VIKUNJA_SERVICE_MAXITEMSPERPAGE=50
VIKUNJA_SERVICE_MOTD=Welcome to Vikunja Python Backend!

# Authentication
VIKUNJA_SERVICE_JWTSECRET=your-super-secret-jwt-key-change-this
VIKUNJA_SERVICE_JWTTTL=259200
VIKUNJA_SERVICE_JWTTTLLONG=2592000

# Database Configuration (SQLite default)
VIKUNJA_DATABASE_TYPE=sqlite
VIKUNJA_DATABASE_PATH=./vikunja.db

# For PostgreSQL:
# VIKUNJA_DATABASE_TYPE=postgresql
# VIKUNJA_DATABASE_HOST=localhost
# VIKUNJA_DATABASE_PORT=5432
# VIKUNJA_DATABASE_USER=vikunja
# VIKUNJA_DATABASE_PASSWORD=your_password
# VIKUNJA_DATABASE_DATABASE=vikunja

# For MySQL:
# VIKUNJA_DATABASE_TYPE=mysql
# VIKUNJA_DATABASE_HOST=localhost
# VIKUNJA_DATABASE_PORT=3306
# VIKUNJA_DATABASE_USER=vikunja
# VIKUNJA_DATABASE_PASSWORD=your_password
# VIKUNJA_DATABASE_DATABASE=vikunja

# CORS Configuration
VIKUNJA_CORS_ENABLE=true
VIKUNJA_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]
VIKUNJA_CORS_MAXAGE=86400

# Feature Toggles
VIKUNJA_SERVICE_ENABLEREGISTRATION=true
VIKUNJA_SERVICE_ENABLELINKSHARING=true
VIKUNJA_SERVICE_ENABLETASKATTACHMENTS=true
VIKUNJA_SERVICE_ENABLETASKCOMMENTS=true
VIKUNJA_SERVICE_ENABLETOTP=true
VIKUNJA_SERVICE_ENABLEUSERDELETION=true
VIKUNJA_SERVICE_ENABLECALDAV=true
VIKUNJA_SERVICE_ENABLEEMAILREMINDERS=true

# Authentication Providers
VIKUNJA_AUTH_LOCAL_ENABLED=true
VIKUNJA_AUTH_LDAP_ENABLED=false
VIKUNJA_AUTH_OPENID_ENABLED=false

# File Storage
VIKUNJA_FILES_BASEPATH=./files
VIKUNJA_FILES_MAXSIZE=20MB

# Background Settings
VIKUNJA_BACKGROUNDS_ENABLED=true
VIKUNJA_BACKGROUNDS_UPLOAD_ENABLED=true
VIKUNJA_BACKGROUNDS_UNSPLASH_ENABLED=false

# Logging
VIKUNJA_LOG_ENABLED=true
VIKUNJA_LOG_LEVEL=INFO
VIKUNJA_LOG_FORMAT=json

# Migration Settings
VIKUNJA_MIGRATION_TODOIST_ENABLE=true
VIKUNJA_MIGRATION_TRELLO_ENABLE=true
VIKUNJA_MIGRATION_MICROSOFTTODO_ENABLE=true

# Advanced Features
VIKUNJA_WEBHOOKS_ENABLED=false
VIKUNJA_RATELIMIT_ENABLED=false